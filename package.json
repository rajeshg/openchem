{
  "name": "openchem",
  "version": "0.2.9",
  "description": "A fast TypeScript / JavaScript chemistry toolkit for working with molecular structures: parsing & generation (SMILES, MOL, SDF), canonicalization, pattern matching (SMARTS), 2D rendering, and molecular descriptors.",
  "author": "rajeshg",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rajeshg/openchem"
  },
  "homepage": "https://github.com/rajeshg/openchem",
  "bugs": {
    "url": "https://github.com/rajeshg/openchem/issues"
  },
  "keywords": [
    "chemistry",
    "cheminformatics",
    "smiles",
    "mol",
    "sdf",
    "smarts",
    "molecular-structures",
    "2d-rendering",
    "typescript",
    "javascript"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "bun test",
    "test:full": "RUN_RDKIT_BULK=1 bun test",
    "test:verbose": "VERBOSE=1 bun test",
    "typecheck": "bunx tsc --noEmit --skipLibCheck",
    "build": "bun build index.ts --outdir ./dist --format esm && bun run build:types",
    "build:types": "tsc --project tsconfig.build.json",
    "serve": "bun run build && bun ./serve-playground.js",
    "mcp:remote": "bun run src/mcp-server-remote.ts",
    "mcp:dev": "bun --watch src/mcp-server-remote.ts",
    "prepublishOnly": "bun run build && bun run test",
    "lint": "npx oxlint@latest .",
    "fmt": "npx oxfmt@latest ."
  },
  "devDependencies": {
    "@rdkit/rdkit": "latest",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/bun": "latest",
    "@types/node": "^24.10.1"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0",
    "zod": "^4.1.13"
  },
  "publishConfig": {
    "access": "public"
  }
}
